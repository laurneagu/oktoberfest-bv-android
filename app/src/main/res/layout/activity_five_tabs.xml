<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/frame"></FrameLayout>

    <larc.ludiconprod.BottomBarHelper.BottomBar
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"

        app:bb_tabXmlResource="@xml/bottombar_tabs_five"

        app:bb_inActiveTabAlpha="0.4"
        app:bb_inActiveTabColor="#0c3855"
        app:bb_activeTabColor="#d4498b"
        app:bb_titleTextAppearance="@style/CustomTitleTextAppearance"
        />

</RelativeLayout>