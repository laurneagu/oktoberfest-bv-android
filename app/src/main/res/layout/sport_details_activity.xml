<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f9fc">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <include
            android:id="@+id/tool_bar"
            layout="@layout/header_login"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select what sports you would like to follow"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="15dp"
                android:layout_marginRight="10dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            >

            <android.support.v7.widget.GridLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:id="@+id/gridLayout">


                <RadioButton
                    android:id="@+id/football"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:text="   Football"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:drawableLeft="@drawable/ic_sport_football"
                    android:drawableRight="@drawable/ic_check"
                    android:button="@null"
                    app:layout_column="0"
                    app:layout_row="0"
                    app:layout_gravity="fill"
                    android:layout_marginBottom="3dp"
                    android:layout_marginRight="3dp"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="1"/>
                <RadioButton
                    android:id="@+id/basketball"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:text="   Basketball"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:drawableLeft="@drawable/ic_sport_basketball"
                    android:drawableRight="@drawable/ic_check"
                    android:button="@null"
                    android:layout_marginBottom="3dp"
                    android:layout_marginLeft="3dp"
                    app:layout_column="1"
                    app:layout_row="0"
                    app:layout_gravity="fill"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="1"/>
                <RadioButton
                    android:id="@+id/volleyball"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:text="   Volleyball"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:drawableLeft="@drawable/ic_sport_voleyball"
                    android:drawableRight="@drawable/ic_check"
                    android:button="@null"
                    android:layout_marginBottom="3dp"
                    android:layout_marginRight="3dp"
                    app:layout_column="0"
                    app:layout_row="1"
                    app:layout_gravity="fill"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="1"/>
                <RadioButton
                    android:id="@+id/jogging"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:text="   Jogging"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:drawableLeft="@drawable/ic_sport_jogging"
                    android:drawableRight="@drawable/ic_check"
                    android:button="@null"
                    android:layout_marginBottom="3dp"
                    android:layout_marginLeft="3dp"
                    app:layout_column="1"
                    app:layout_row="1"
                    app:layout_gravity="fill"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="1"/>
                <RadioButton
                    android:id="@+id/gym"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:text="   Gym"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:drawableLeft="@drawable/ic_sport_gym"
                    android:drawableRight="@drawable/ic_check"
                    android:button="@null"
                    android:layout_marginBottom="3dp"
                    android:layout_marginRight="3dp"
                    app:layout_column="0"
                    app:layout_row="2"
                    app:layout_gravity="fill"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="1"/>
                <RadioButton
                    android:id="@+id/cycling"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:text="   Cycling"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:drawableLeft="@drawable/ic_sport_cycling"
                    android:drawableRight="@drawable/ic_check"
                    android:button="@null"
                    android:layout_marginBottom="3dp"
                    android:layout_marginLeft="3dp"
                    app:layout_column="1"
                    app:layout_row="2"
                    app:layout_gravity="fill"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="1"/>
                <RadioButton
                    android:id="@+id/tennis"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:text="   Tennis"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:drawableLeft="@drawable/ic_sport_tennis"
                    android:drawableRight="@drawable/ic_check"
                    android:button="@null"
                    android:layout_marginBottom="3dp"
                    android:layout_marginRight="3dp"
                    app:layout_column="0"
                    app:layout_row="3"
                    app:layout_gravity="fill"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="1"/>
                <RadioButton
                    android:id="@+id/pingPong"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:text="   Ping Pong"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:drawableLeft="@drawable/ic_sport_pingpong"
                    android:drawableRight="@drawable/ic_check"
                    android:button="@null"
                    android:layout_marginBottom="3dp"
                    android:layout_marginLeft="3dp"
                    app:layout_column="1"
                    app:layout_row="3"
                    app:layout_gravity="fill"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="1"/>
                <RadioButton
                    android:id="@+id/squash"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:text="   Squash"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:drawableLeft="@drawable/ic_sport_squash"
                    android:drawableRight="@drawable/ic_check"
                    android:button="@null"
                    android:layout_marginBottom="3dp"
                    android:layout_marginRight="3dp"
                    app:layout_column="0"
                    app:layout_row="4"
                    app:layout_gravity="fill"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="1"/>
                <RadioButton
                    android:id="@+id/others"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:text="   Others"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:drawableLeft="@drawable/ic_sport_others"
                    android:drawableRight="@drawable/ic_check"
                    android:button="@null"
                    android:layout_marginBottom="3dp"
                    android:layout_marginLeft="3dp"
                    app:layout_column="1"
                    app:layout_row="4"
                    app:layout_gravity="fill"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="1"/>
            </android.support.v7.widget.GridLayout>



        </RelativeLayout>




    </LinearLayout>



    <Button
        android:id="@+id/savePreferincesButton"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="SAVE PREFERENCES"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/rounded_button_notselected"/>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rangeLayout"
        android:layout_above="@id/savePreferincesButton"
        android:layout_marginBottom="15dp">
        <TextView
            android:id="@+id/rangeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="10dp"
            android:text="20 Km"
            />

    </RelativeLayout>

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"

        android:layout_above="@+id/rangeLayout"
        android:layout_alignStart="@+id/rangeLayout" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_above="@id/seekBar">
        <TextView
            android:id="@+id/textViewRange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="10dp"
            android:text="Select the area range for activities around"
            />

    </RelativeLayout>

</RelativeLayout>