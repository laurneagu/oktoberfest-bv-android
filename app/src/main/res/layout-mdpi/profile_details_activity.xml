<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f9fc">
    <ImageView
        android:layout_marginTop="56dp"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="@drawable/shadow_top_to_bottom"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >


        <include
            android:id="@+id/tool_bar"
            layout="@layout/header_login"
            android:layout_height="56dp"
            android:layout_width="match_parent"
            />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        >
        <TextView
            android:id="@+id/introText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:textSize="18sp"
            android:textColor="#f44292"
            android:text="New you out here Florin?Cool!" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textSize="16sp"
            android:text="We believe you enjoy Oktoberfest Brasov too!Take a moment &amp; set up your profile." />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="35dp"
                android:layout_height="110dp"
                android:layout_centerHorizontal="true"
                android:alpha="0"
                android:src="@drawable/com_facebook_button_send_background"
                />

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/imgProfilePicture"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:clickable="false"
                android:src="@drawable/com_facebook_profile_picture_blank_portrait" />

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/chooseAPhoto"
                android:clickable="true"
                android:layout_toRightOf="@+id/imageView"
                android:src="@color/com_facebook_blue"
                android:layout_marginTop="70dp"/>


        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp">
            <RadioGroup
                android:checkedButton="@+id/male"
                android:id="@+id/sexSwitch"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/rounded_edittext"
                android:orientation="horizontal">

                <RadioButton
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="1dp"
                    android:id="@+id/male"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:button="@null"
                    android:gravity="center"
                    android:text="Male"
                    android:textSize="16sp"
                    android:textColor="#1A0c3855"
                    />

                <RadioButton
                    android:layout_marginRight="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="1dp"
                    android:id="@+id/female"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:button="@null"
                    android:gravity="center"
                    android:text="Female"
                    android:textColor="#1A0c3855" />
            </RadioGroup>
        </RelativeLayout>
        <EditText
            android:id="@+id/age"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:drawableLeft="@drawable/ic_calendar"
            android:ems="10"
            android:maxLength="3"
            android:paddingLeft="15dp"
            android:layout_marginTop="8dp"
            android:inputType="number"
            android:textSize="16sp"
            android:background="@drawable/rounded_edittext"
            android:hint="How old are you?"/>
    </LinearLayout>


    </LinearLayout>
    <Button
        android:id="@+id/saveAndContinueButton"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="SAVE &amp; CONTINUE"
        android:layout_marginBottom="16dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="16dp"
        android:textSize="14sp"
        android:layout_marginRight="16dp"
        android:textColor="#ffffff"
        android:background="@drawable/pink_button_selector"/>

</RelativeLayout>